<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.solicitudes.SolicitudActualizarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutNomFoto"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:pointerIcon="hand"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgNomFoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_casa01"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutNomOportunidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_edit_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutNomFoto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtNomOportunidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="text"
                        android:hint="Motivo"
                        android:text="Capital de trabajo"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutDesOportunidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_edit_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutNomOportunidad">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtDesOportunidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:height="100dp"
                        android:inputType="textMultiLine"
                        android:hint="Descripción"
                        android:text="Solicito préstamo para capital de trabajo, en el cual ya tengo el negocio cerrado."
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutFecVigenciaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_datepicker_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutDesOportunidad">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtFecVigenciaInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="date"
                        android:hint="Fecha de Vigencia Desde"
                        android:text="04/05/2023"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutFecVigenciaFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_datepicker_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutFecVigenciaInicio">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtFecVigenciaFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="date"
                        android:hint="Fecha de Vigencia Hasta"
                        android:text="25/08/2023"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutIdOportunidadTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_edit_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutFecVigenciaFin">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtIdOportunidadTipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="text"
                        android:hint="Tipo de inmueble"
                        android:text="Casa"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutImpPrestamo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_money_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutIdOportunidadTipo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtImpPrestamo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="numberDecimal"
                        android:hint="Importe del Préstamo"
                        android:text="S/. 50,000.00"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutNumMesPlazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_edit_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutImpPrestamo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtNumMesPlazo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="number"
                        android:hint="Plazo (meses)"
                        android:text="24"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutNumTir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_numbers_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutNumMesPlazo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPctTir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="numberDecimal"
                        android:hint="TIR (% Tasa Interna de Retorno)"
                        android:text="20.00"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutDesDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_edit_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutNumTir">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtDesDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="text"
                        android:hint="Dirección"
                        android:text="Av. Los desamparados 123"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutNumLatitudMapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_numbers_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutDesDireccion">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtNumLatitudMapa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="numberSigned"
                        android:hint="Latitud"
                        android:text="-76.123456"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutNumLongitudMapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/cr_gris_claro"
                    app:startIconDrawable="@drawable/icon_numbers_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLayoutNumLatitudMapa">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtNumLongitudMapa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:inputType="numberSigned"
                        android:hint="Longitud"
                        android:text="-12.123456"
                        android:textColor="@color/cr_azul_oscuro" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnSolicitudActualizar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:background="@color/cr_azul_oscuro"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Actualizar"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>