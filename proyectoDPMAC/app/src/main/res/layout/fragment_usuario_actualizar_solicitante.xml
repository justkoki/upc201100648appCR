<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.usuarios.UsuarioActualizarSolicitanteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutDesFotoUrl"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:pointerIcon="hand"
                app:hintTextColor="@color/cr_gris_claro">

                <ImageView
                    android:id="@+id/imgDesFotoUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_avatar00"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutNomUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:hintTextColor="@color/cr_gris_claro"
                app:startIconDrawable="@drawable/icon_edit_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNomUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:inputType="text"
                    android:hint="Nombres"
                    android:text="Juan"
                    android:textColor="@color/cr_azul_oscuro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutApeUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/cr_gris_claro"
                app:startIconDrawable="@drawable/icon_edit_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtApeUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:inputType="textMultiLine"
                    android:hint="Apellidos"
                    android:text="Perez"
                    android:textColor="@color/cr_azul_oscuro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutDesEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/cr_gris_claro"
                app:startIconDrawable="@drawable/icon_email_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtDesEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:inputType="textEmailAddress"
                    android:hint="Correo"
                    android:text="jperez@gmail.com"
                    android:textColor="@color/cr_azul_oscuro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutNumCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/cr_gris_claro"
                app:startIconDrawable="@drawable/icon_phone_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNumCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:inputType="date"
                    android:hint="Celular"
                    android:text="999888777"
                    android:textColor="@color/cr_azul_oscuro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutNumDocumentoIdentidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/cr_gris_claro"
                app:startIconDrawable="@drawable/icon_numbers_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNumDocumentoIdentidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:inputType="number"
                    android:hint="Nro. de DNI"
                    android:text="43219876"
                    android:textColor="@color/cr_azul_oscuro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutImpIngreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/cr_gris_claro"
                app:startIconDrawable="@drawable/icon_money_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtImpIngreso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:inputType="number"
                    android:hint="Ingreso mensual"
                    android:text="S/. 10000.00"
                    android:textColor="@color/cr_azul_oscuro" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chkIndPersonaEp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="48dp"
                android:text="Â¿Es persona expuesta politicamente?"
                android:textColor="@color/cr_azul_oscuro"/>

            <Button
                android:id="@+id/btnUsuarioActualizar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:background="@color/cr_azul_oscuro"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Actualizar"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>